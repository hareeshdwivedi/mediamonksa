{
  "name": "frontend-templating-challenge",
  "version": "1.0.0",
  "scripts": {
    "lint": "eslint src/app/**",
    "watch:build:css": "sass src/scss/styles.scss dist/css/styles.css --no-source-map --watch",
    "watch:build:js": "webpack --mode development --watch",
    "build:css": "sass src/scss/styles.scss dist/css/styles.css --no-source-map --style compressed",
    "build:js": "webpack --mode production",
    "build": "npm run build:js && npm run build:css"
  },
  "author": "Braian Rosas",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@types/react": "^17.0.32",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.26.1",
    "sass": "^1.43.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.60.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.3.1"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
